@model List<HR_Lesson3_Fall_2011.web.Models.Entities.Employee>
@{
    ViewBag.Title = "Employees";
}

<h2>Employees</h2>

<ul class="employee-list">
    @foreach (var employee in Model)
    {
        <li>
            @Html.ActionLink(employee.Name, "Details", new { id = employee.Id }, new {@class="employee-link" })
            @Html.ActionLink("Load Dialog", "Details", new { id = employee.Id}, new { @class= "employee-link-dialog btn btn-default"})
            <div class="employee-details alert alert-success">
                <p>@employee.Bio</p>
                <strong>@employee.DateHired.ToShortDateString()</strong>
            </div>
        </li>
    }
</ul>

<div class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      </div>
      <div class="modal-body">
        <p>One fine body&hellip;</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

